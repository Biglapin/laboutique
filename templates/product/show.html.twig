{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block content %}

<div class="row">
  <div class="col-md-4 ">
    <img src="/uploads/files/{{ product.Illustration }}" alt="{{ product.name}}" class="img-fluid">
  </div>   
  <div class="col-md-4">
    <h5>{{ product.name}}</h5>
    <p>{{ product.subtitle}}</p>
    <span class='product-page-price'>{{ (product.price / 100)|number_format(2, ',','.')}}â‚¬</span>
    <hr>
    <p>{{ product.description }}</p>
     <a href="{{ path('add_to_cart', {id : product.id}) }}" class="btn btn-primary">Ajouter au panier</a>
  </div>
</div>

{% endblock %}
